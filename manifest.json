{
    "name": "ezRetime",
    "description": "A speedrun video retimer for Twitch, YouTube, and more! Click the extension icon on a page to run it.",
    "permissions": ["activeTab", "scripting"],
    "icons": {
        "128": "/icon.png"
    },
    "action": {
        "default_title": "Run ezRetime on current page."
    },
    "background": { "service_worker": "/worker.js" },
    "web_accessible_resources": [{
        "resources": ["scripts/*.js"],
        "matches": ["<all_urls>"]
    }],
    "version": "1.0.0",
    "manifest_version": 3
}
